<style>
  table {
    counter-reset: section;
  }

  .count::before {
    counter-increment: section;
    content: counter(section);
  }
</style>
<div class="container mt-5">
  <div class="row mt-4">

  </div>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Customer Name</th>
        <th scope="col">Room Name</th>
        <th scope="col">Type</th>
        <th scope="col">Checked in</th>
        <th scope="col">Checked Out</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each room}}
      <tr>
        <th class="count" scope="row"></th>
        <td>{{this.name}}<br>({{this.email}})</td>
        <td><img style="width:70px;height:60px" src="/room-images/{{this.roomid}}.jpg">{{this.roomname}}</td>
        <td>{{this.type}}</td>
        <td><a href="/hotel/edit-checkin/{{this._id}}" class="btn btn-primary">Checked In</a><br>{{this.chn}}</td>
        <td> <a href="/hotel/edit-checkout/{{this._id}}" class="btn btn-danger">Cheched Out</a><br>{{this.cho}}</td> 
        <td><a href="/hotel/view-details/{{this._id}}" class="btn btn-primary">view-details</a></td>
      </tr>{{/each}}
      
      

    </tbody>
  </table>
  <script src="/hotelHome/assets/js/jquery.min.js"></script>
  <script src="/hotelHome/assets/bootstrap/js/bootstrap.min.js"></script>
  <script src="/hotelHome/assets/js/bs-init.js"></script>
  <script src="/hotelHome/https://cdnjs.cloudflare.com/ajax/libs/aos/2.2.0/aos.js"></script>
  <script src="/hotelHome/assets/js/Sidebar-Menu.js"></script>