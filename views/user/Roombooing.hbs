                                    <h4 class="text-center" style="color: aliceblue;">Rooms :</h4>
                                </div>

                                <div class="col" style="padding-left: 15px;padding-right: 5px;padding-top: 0px;"><input
                                        class="form-control" type="text" id="q" name="Room" readonly></div>

                            </div>
                        </div>
                        
                        <div class="form-group"><button class="btn btn-primary btn-block" type="submit">BOOK
                                NOW</button></div>
                        <h5 class="text" style="color:rgb(255, 255, 255)">Note: only 3 persons alloved each room</h3>
                            {{#each rooms}}
                            <input type="text" name="roomid"  value="{{this._id}}" hidden>
                            <input type="text" name="Price"  value="{{this.price}}" hidden>
                            <input type="text" name="roomname"  value="{{this.roomname}}" hidden>
                            <input type="text" name="type"  value="{{this.type}}" hidden>
                            <input type="text" name="hotelid"  value="{{this.hid}}" hidden>{{/each}}
                            <input type="text" name="userid"  value="{{user._id}}" hidden>
                            <input type="text" name="name"  value="{{user.displayName}}" hidden>
                             <input type="text" name="email"  value="{{email}}" hidden>
                            <input type="text" name="status"  value="pendin" hidden>
                            <input type="text" name="chn"  value="pendin" hidden>
                            <input type="text" name="cho"  value="pendin" hidden>
